{
  "name": "js-tools",
  "version": "1.0.0",
  "description": "Describe js-tools here",
  "private": true,
  "scripts": {
    "build": "nwb build-react-app",
    "clean": "nwb clean-app",
    "start": "nwb serve-react-app",
    "test": "npm run lint && nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "prettier":
      "prettier --write '*.{js,prettierrc,json}' '{src,tests}/**/*.js'",
    "precommit": "lint-staged && npm test",
    "prepush": "npm test",
    "lint": "eslint src/**/*.js && stylelint src/**/*.scss",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.{js}": ["prettier --write", "eslint", "git add"],
    "*.{prettierrc,json}": ["prettier --write", "git add"],
    "*.scss": ["stylelint", "git add"]
  },
  "dependencies": {
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "eslint": "4.19.0",
    "eslint-plugin-react": "7.7.0",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "nwb": "0.21.x",
    "nwb-sass": "0.8.3",
    "prettier": "1.11.1",
    "stylelint": "9.1.3",
    "stylelint-scss": "2.5.0"
  },
  "author": "",
  "license": "MIT",
  "repository": ""
}
